source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "webrick", "~> 1.8"

group :jekyll_plugins do
  # SEO & Social Optimization
  gem "jekyll-feed", "~> 0.17"           # RSS/Atom feeds
  gem "jekyll-seo-tag", "~> 2.8"         # Meta tags, JSON-LD, Open Graph, Twitter Cards
  gem "jekyll-sitemap", "~> 1.4"         # XML sitemap generation

  # Content Management & Organization
  gem "jekyll-archives"                   # Category/tag archive pages
  gem "jekyll-paginate-v2"                # Advanced pagination
  gem "jekyll-redirect-from"              # URL redirects for old content

  # Performance & Optimization
  gem "jekyll-minifier"                   # Minify HTML/CSS/JS
  gem "jekyll-responsive-image"           # Responsive images (srcset)

  # Enhanced Functionality
  gem "jekyll-compose"                    # CLI for creating posts/pages
  gem "jekyll-mentions"                   # @username mentions support
  gem "jekyll-last-modified-at"           # Track last modified dates
  gem "jemoji"                            # GitHub emoji support
end
